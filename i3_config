### Experiments
# make window stick to the screen
bindsym $mod+Shift+s sticky toggle

# open floating/scratchpad terminal
bindsym $mod+n exec exec -a notepad termite # -e vim
for_window [instance=notepad] floating enable
for_window [instance=notepad] sticky enable
#for_window [instance=notepad] resize set 500 700
#for_window [instance=notepad] move position 832 34, move scratchpad, scratchpad show
for_window [instance=notepad] move scratchpad, scratchpad show

# move to scratchpad
bindsym $mod+Shift+x move scratchpad

# retrieve from scratchpad
bindsym $mod+x scratchpad show

# interactive i3-input
bindsym $mod+i exec i3-input -F "%s" -P 'execute i3 command: '

# toggle bar hide
bindsym $mod+Shift+d bar mode toggle

# manage displays with xrandr
set $mode_display Ext Screen (v) VGA ON, (h) HDMI ON,, (l) switch HDMI to left side (r) switch HDMI to right side, (y) VGA OFF, (x) HDMI OFF
mode "$mode_display" {
    bindsym h exec --no-startup-id xrandr --output HDMI-0 --auto --right-of LVDS-0, mode "default"
    bindsym l exec --no-startup-id xrandr --output HDMI-0 --off && xrandr --output HDMI-0 --auto --left-of LVDS-0, mode "default"
    bindsym r exec --no-startup-id xrandr --output HDMI-0 --off && xrandr --output HDMI-0 --auto --right-of LVDS-0, mode "default"
    bindsym v exec --no-startup-id xrandr --output VGA-0 --auto --right-of LVDS-0, mode "default"
    bindsym y exec --no-startup-id xrandr --output VGA-0 --off, mode "default"
    bindsym x exec --no-startup-id xrandr --output HDMI-0 --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+o mode "$mode_display"

# nagbar example
#exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# connect to headset
set $mode_bluetooth bluetooth: (c) connect, (d) disconnect, (f) force connect + restart pulseaudio
mode "$mode_bluetooth" {
    bindsym c exec --no-startup-id /home/max/.scripts/sony2, mode "default"
    bindsym d exec --no-startup-id /home/max/.scripts/sony_disconnect, mode "default"
    bindsym f exec --no-startup-id /home/max/.scripts/sony, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+b mode "$mode_bluetooth"

#open mpv with clipboard content
bindsym $mod+y exec --no-startup-id /home/max/.scripts/mpv_clipboard

# change keyboard layout
bindsym $mod+Shift+w exec --no-startup-id setxkbmap de
